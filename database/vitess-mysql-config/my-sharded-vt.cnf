# Example my-unsharded.cnf (server-id=100)
[mysqld]
server_id = 100
log_bin = mysql-bin
binlog_format = ROW
gtid_mode = ON
enforce_gtid_consistency = ON
log_slave_updates = ON
skip-slave-start = TRUE
default-authentication-plugin = mysql_native_password # Hoặc caching_sha2_password nếu client hỗ trợ
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
# Thêm các cấu hình khác nếu cần (buffer pool, etc.)