{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Async",
      "Elastic.Serilog.Sinks",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Thread",
      "Serilog.Enrichers.Context"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug",
        "System": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {SourceContext} [{Level}] {Message}{NewLine}{Exception}",
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Sixteen, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "bootstrapMethod": "Failure",
          "nodes": [
            "http://localhost:18523"
          ],
          "dataStream": "logs-dotnet-default"
        }
      }
    ],
    "WriteTo:Async": {
      "Name": "Async",
      "Args": {
        "configure": [
          {
            "Name": "File",
            "Args": {
              "path": "logs/log-.txt",
              "rollingInterval": "Day",
              "outputTemplate": "{Timestamp:o} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}/{ThreadName}) {Message}{NewLine}{Exception}"
            }
          }
        ]
      }
    }
  },
  "Enrich": {
    "With": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId",
      {
        "Name": "AtLevel",
        "Args": {
          "enrichFromLevel": "Error",
          "configureEnricher": ["WithThreadName"]
        }
      }
    ],
    "Properties": {
      "Application": "AcademicService"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "ElasticSearch.Apm": "Debug"
    }
  },
  "ConnectionStrings":{
    "DefaultConnection": "Host=localhost;Port=16432;Database=distributed_student_db;Username=postgres;Password=postgres;"
  },
  "AllowedHosts": "*"
}