{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Async",
      "Elastic.Serilog.Sinks",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Thread",
      "Serilog.Enrichers.Context"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug",
        "System": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {SourceContext} [{Level}] {Message}{NewLine}{Exception}",
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Sixteen, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "bootstrapMethod": "Failure",
          "nodes": [
            "http://localhost:25300"
          ],
          "dataStream": "logs-dotnet-default"
        }
      }
    ],
    "WriteTo:Async": {
      "Name": "Async",
      "Args": {
        "configure": [
          {
            "Name": "File",
            "Args": {
              "path": "logs/log-.txt",
              "rollingInterval": "Day",
              "outputTemplate": "{Timestamp:o} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}/{ThreadName}) {Message}{NewLine}{Exception}"
            }
          }
        ]
      }
    }
  },
  "Enrich": {
    "With": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId",
      {
        "Name": "AtLevel",
        "Args": {
          "enrichFromLevel": "Error",
          "configureEnricher": [
            "WithThreadName"
          ]
        }
      }
    ],
    "Properties": {
      "Application": "AcademicService"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "ElasticSearch.Apm": "Debug"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=26000;Database=dsmsdb;Username=coor;Password=coor;Timeout=300;CommandTimeout=300;"
  },
  "AllowedHosts": "*",
  "Tenant": "IT-FACULTY",
  "Finbuckle:MultiTenant:Stores:ConfigurationStore": {
    "Defaults": {
      "Location": {
        "Public": "",
        "Private": ""
      }
    },
    "Tenants": [
      {
        "Id": "CNTT",
        "Identifier": "IT-FACULTY",
        "Name": "Công Nghệ Thông Tin",
        "Location": {
          "Public": "https://localhost:30000",
          "Private": "https://localhost:30002"
        }
      },
      {
        "Id": "DTVT",
        "Identifier": "VT-FACULTY",
        "Name": "Điện Tử Viễn thông",
        "Location": {
          "Public": "https://localhost:30010",
          "Private": "https://localhost:30012"
        }
      }
    ]
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:30000"
      },
      "Https": {
        "Url": "https://localhost:30001"
      },
      "Private": {
        "Url": "https://localhost:30002"
      }
    }
  },
